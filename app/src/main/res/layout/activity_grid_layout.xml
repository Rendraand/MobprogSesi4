<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GridLayoutActivity"
    android:columnCount="2"
    android:layout_gravity="center"
    android:padding="16dp">

    <!-- Grid Item 1 -->
    <ImageView
        android:layout_width="170dp"
        android:layout_height="145dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        tools:srcCompat="@drawable/avocado_toast_595x447" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="145dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/oatmeal_apel_madu_595x595"
        tools:srcCompat="@drawable/oatmeal_apel_madu_595x595" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Makanan 1"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Makanan 2"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center"
        android:textSize="18sp" />

    <!-- Grid Item 2 -->
    <ImageView
        android:layout_width="170dp"
        android:layout_height="145dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        tools:srcCompat="@drawable/fresh_vegetables_white" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="145dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/brokoli_ayam_595x595" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Makanan 3"
    android:layout_row="3"
    android:layout_column="0"
    android:layout_gravity="top|center"
    android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Makanan 4"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="top|center"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mau Masak Apa Hari Ini?"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:textSize="36sp"
        android:textStyle="bold" />

</GridLayout>